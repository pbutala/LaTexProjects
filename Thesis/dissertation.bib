@Article{als11a,
  Title                    = {Mobile Multigigabit Indoor Optical Wireless Systems Employing Multibeam Power Adaptation and Imaging Diversity Receivers},
  Author                   = {Alsaadi, F. and Elmirghani, J.},
  Journal                  = {Optical Communications and Networking, IEEE/OSA Journal of},
  Year                     = {2011},

  Month                    = {january },
  Number                   = {1},
  Pages                    = {27 -39},
  Volume                   = {3},

  Abstract                 = {In this paper, we introduce two novel methods (beam power adaptation and diversity imaging) to the design of optical wireless systems to improve link performance. The aim is to reduce the effect of intersymbol interference and to enhance the signal-to-noise ratio (SNR), thus enabling the system to achieve mobility while operating at high bit rates. In good agreement with previous work, the results show that the imaging conventional diffuse system (CDS) with maximum ratio combining (MRC) offers 20 dB better SNR than the nonimaging CDS. The new adaptive line strip multibeam system (ALSMS) with a new imaging diversity receiver provides an SNR improvement of 39 dB over the imaging diversity CDS when both systems employ MRC and operate at 30 Mbits/s. This result illustrates the SNR improvement achieved through the use of our adaptive algorithm coupled with spot diffusing. The lower bit rate (30 Mbits/s) facilitates comparison with previous work. The results also indicate that the combination of transmit power adaptation and spot diffusing coupled with imaging diversity receivers can enable fully mobile 2.5 Gbit/s optical wireless communication. Such a 2.5 Gbit/s system (imaging MRC ALSMS) achieved an SNR improvement of 27 dB over a lower data rate (30 Mbits/s) nonimaging CDS.},
  Category                 = {MIMO},
  Conclusion               = {In this paper, we introduced three approaches (transmit power adaptation, spot diffusing, and imaging diversity reception) to the design of OW systems to improve the system’s performance in the presence of BN, multipath dispersion, and mobility. At a bit rate of 30 Mbits/s, the CDS SNR performance improves by 20 dB when the single imaging MRC receiver replaces the nonimaging receiver. This result agrees very well with that reported in [17]. A further SNR improvement of 8 dB (in the imaging CDS system) is achieved when our imaging diversity MRC receiver is implemented instead of the single imaging MRC receiver. Simulation results indicate that the combination of transmit power adaptation and spot diffusing (i.e., ALSMS) coupled with imaging diversity MRC reception produces an SNR improvement of 39 dB over the imaging diversity MRC CDS when both systems operate at a bit rate of 30 Mbits/s and at a transmitter–receiver separation of 6 m. This result is the consequence of two effects. First, assigning higher power levels adaptively to the spots nearest to the receiver results in a strong received power. Second, a reduction in the ambient-induced shot noise and preamplifier thermal noise is observed due to the small pixel size and its associated narrow FOV. The results also show that an SNR gain of 23 dB is achieved when our proposed system (imaging diversity MRC ALSMS) replaces the imaging diversity LSMS with MRC again at a 6 m transmitter–receiver distance and a data rate of 30 Mbits/s illustrating the gain achieved through adaptation.

The power consumed by the proposed system is relatively low and the transmit power can be significantly reduced below the current 1 Watt level by making use of the SNR improvements achieved at the bit rates considered. In order to achieve a BER of 10^-9, the SNR has to be 15.6 dB for conventional OOK systems. Therefore, at the worst communication path considered in the 30 Mbit/s OOK systems, the combination of the spot-diffusing geometry and imaging diversity reception with MRC can reduce the transmit power by almost 10 dB while achieving 10^-9 BER. A further reduction in the transmit power requirement of 12 dB approximately can be achieved when the beam power adaptation method is implemented. As such, in our proposed systems, the power required in each beam is relatively low and can also be transmitted in compliance with eye safety regulations. Furthermore, the system makes use of commercially available components and can therefore be implemented at relatively low cost.

These SNR improvements are also coupled with a significant reduction in delay spread, i.e., increase in channel bandwidth. These improvements can enable the OW system to achieve mobility while operating at high bit rates (2.5 Gbits/s). Our proposed system (imaging diversity MRC ALSMS) is evaluated at a high bit rate of 2.5 Gbits/s and an SNR improvement of 27 dB is observed compared to a lower data rate (30 Mbits/s) nonimaging CDS at a 6 m transmitter–receiver horizontal separation.},
  Doi                      = {10.1364/JOCN.3.000027},
  File                     = {:MIMO\\[MIMO][als11a] Mobile Multigigabit Indoor Optical Wireless Systems Employing Multibeam Power Adaptation and Imaging Diversity Receivers.pdf:PDF},
  ISSN                     = {1943-0620},
  Keywords                 = {adaptive line strip multibeam system;conventional diffuse system;imaging diversity receivers;intersymbol interference;maximum ratio combining;mobile multigigabit indoor optical wireless systems;multibeam power adaptation;signal-to-noise ratio;indoor communication;intersymbol interference;mobile communication;optical communication;optical receivers;},
  Owner                    = {pbutala},
  Timestamp                = {2012.05.21},
  Url                      = {http://ieeexplore.ieee.org/stamp/stamp.jsp?tp=&arnumber=5665993}
}

@Article{arm09a,
